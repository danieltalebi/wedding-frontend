{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "wedding-frontend": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/wedding-frontend",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "assets": [
              { "glob": "**/*", "input": "src/assets/fonts", "output": "/assets/fonts" },
              { "glob": "**/*", "input": "src/assets/images", "output": "/assets/images" },
              "src/favicon.ico",
              "src/assets/videos/landingVideo.mp4"


            ],
            "styles": [
              "src/styles.css",
              {"input": "src/assets/css/style.css"},

              "src/assets/css/animate.css",
              "src/assets/css/bootstrap.css",
              "src/assets/css/flexslider.css",
              "src/assets/css/icomoon.css",
              "src/assets/css/magnific-popup.css",
              "src/assets/css/owl.carousel.min.css",
              "src/assets/css/owl.theme.default.min.css"
            ],
            "scripts": [
              "src/assets/js/angular-waypoints.all.js",
              "src/assets/js/bootstrap.min.js",
              "src/assets/js/modernizr-2.6.2.min.js",
              "src/assets/js/owl.carousel.min.js",
              "src/assets/js/respond.min.js",
              "src/assets/js/simplyCountdown.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "wedding-frontend:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "wedding-frontend:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "wedding-frontend:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "wedding-frontend:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "wedding-frontend:serve:production"
            }
          }
        }
      }
    }},
  "defaultProject": "wedding-frontend"
}
